{% extends 'base.html.twig' %}

{% block title %}Blog - Accueil{% endblock %}

{% block body %}
    <h1 class="m-5">Les articles</h1>
    <div class="articles d-flex flex-row flex-wrap">
        {% for post in posts %}
            <div class="card m-3"
                 style="width: 18rem;">
                <img src="{{ post.imageName }}"
                     class="card-img-top"
                     alt="Image du post">
                <div class="card-body">
                    <h5 class="card-title">{{ post.title }}</h5>
                    <p class="card-text">{{ post.content|slice(0, 60) }}...</p>
                    <a href="{{ path('show', {slug: post.slug}) }}"
                       class="btn btn-primary">Lire la suite</a>
                </div>
            </div>
        {% endfor %}
    </div>
    {{ knp_pagination_render(posts, '/components/pagination/pagination_bootstrap.html.twig') }}
{% endblock %}
