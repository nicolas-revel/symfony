{% extends 'base.html.twig' %}

{% block title %}Blog - Connection{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Vous connecter</h1>
        <label for="inputUsername"
               class="mb-2">Username</label>
        <input type="text"
               value="{{ last_username }}"
               name="username"
               id="inputUsername"
               class="form-control mb-4"
               autocomplete="username"
               required
               autofocus>
        <label for="inputPassword"
               class="mb-2">Password</label>
        <input type="password"
               name="password"
               id="inputPassword"
               class="form-control mb-4"
               autocomplete="current-password"
               required>
        <input type="hidden"
               name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <button class="btn btn-primary"
                type="submit">
            Se connecter
        </button>
    </form>
{% endblock %}
